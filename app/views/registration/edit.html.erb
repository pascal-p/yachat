<% provide(:title, 'User Profile') %>
<header>
  <h2>Edit user profile</h2>
</header>

<div class="row">
  <%= form_for(@user, as: :user, url: { action: "update" },
               html: { class: "form-horizontal", method: :put }) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group row">
      <%= f.label :username, class: "control-label col-md-1 col-md-offset-3 col-sm-2 col-sm-offset-1" %>
      <div class="col-md-5 col-sm-9">
        <%= f.text_field :username, autofocus: true, placeholder: "Your Name" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-offset-4 col-md-8 col-sm-offset-3 col-sm-9">
        <%= f.submit :Update, class: "btn btn-sm btn-primary" %>
        <%= f.button :Reset, type: :reset, class: "btn btn-sm btn-default" %>
      </div>
    </div>
  <% end %>

  <div class="form-group row">
    <label class="control-label col-md-1 col-md-offset-3 col-sm-2 col-sm-offset-1 my-label">Unhappy?</label>
    <div class="col-md-5 col-sm-9">
      <%= button_to("Cancel my account", { action: "destroy" },
                    data: { confirm: "Are you sure?" },
                    class: 'btn btn-sm btn-danger',
                    method: :delete) %>
    </div>
  </div>

  <div class="col-md-offset-1 col-md-11 col-sm-offset-1 col-sm-11">
    <div class="pull-right">
      <%= link_to "Back", :back, class: 'btn btn-sm btn-default' %>
    </div>
  </div>

</div>
