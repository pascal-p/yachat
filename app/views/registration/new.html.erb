<% provide(:title, 'Sign up') %>
<header>
  <h2>Sign up</h2>
</header>

<div class="row">
  <%= form_for(@user, url: signup_path, html: { class: "form-horizontal" }) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group row">
      <%= f.label :username, class: "control-label col-md-1 col-md-offset-3 col-sm-2 col-sm-offset-1" %>
      <div class="col-md-5 col-sm-9 ">
        <%= f.text_field :username, autofocus: true, placeholder: "Your Name"  %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-offset-4 col-md-5 col-sm-offset-3 col-sm-9">
        <%= f.submit "Sign up", class: 'btn btn-sm btn-primary' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label "Already signed up?", class: "control-label col-md-1 col-md-offset-3 col-md-offset-3 col-sm-2 col-sm-offset-1" %>
      <div class="col-md-5 col-sm-9">
        <%= link_to "Log in", login_path, class: 'btn btn-sm btn-default' %>
      </div>
    </div>
  <% end %>
</div>
