<h2>Sign up</h2>

<div class="row">
  <%= form_for(@user, url: signup_path, class: "form-horizontal") do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    
    <div class="form-group">
      <%= f.label :username, class: "control-label col-md-1 col-sm-1"  %>
      <div class="col-md-11 col-sm-11">
        <%= f.text_field :username, autofocus: true  %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-md-offset-1 col-md-11 col-sm-offset-1 col-md-11">
        <%= f.submit "Sign up", class: 'btn btn-sm btn-primary' %>
      </div>
    </div>
  <% end %>
  
  <!-- < %= link_to "Log in", new_session_path(resource_name) %><br /> -->
</div>
  
