<h2>Log in</h2>

<div class="row">
  <%= form_for(@user, url: login_path, class: "form-horizontal") do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group">
      <%= f.label :username, class: "control-label col-md-1 col-sm-1", hint: "enter username" %>
      <div class="col-md-11 col-sm-11">
        <%= f.text_field :username, autofocus: true  %>
      </div>
    </div>

    <!--
    <div class="form-group">
      < % = f.label :remember_me, class: "checkbox col-md-1 col-sm-1" %>
      <div class="col-md-11 col-sm-11">
        < % = f.check_box :remember_me, class:"checkbox" %>
        <span> Remember me on this computer</span>
      </div>
    </div>
    -->

    <div class="form-group">
      <div class="col-md-offset-1 col-md-11 col-sm-offset-1 col-md-11">
        <%= f.submit "Log in", class: 'btn btn-sm btn-primary' %>

        <%= link_to "Sign up", signup_path(), class: 'btn btn-sm btn-default' %><br />
      </div>
    </div>
  <% end %>

</div>
