<% provide(:title, 'Log in') %>
<header>
  <h2>Log in</h2>
</header>

<div class="row">
  <%= form_for(@user, url: login_path, html: {class: "form-horizontal"}) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group row">
      <%= f.label :username, class: "control-label col-md-1 col-md-offset-3 col-md-offset-3 col-sm-2 col-sm-offset-1" %>
      <div class="col-md-5 col-sm-9">
        <%= f.text_field :username, autofocus: true, placeholder: "your username"  %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :remember_me, class: "checkbox col-md-1 col-md-offset-3 col-md-offset-3 col-sm-2 col-sm-offset-1" %>
      <div class="col-md-5 col-sm-9">
        <%= f.check_box :remember_me, class:"checkbox" %>
        <span>(on this computer)</span>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-offset-4 col-md-5 col-sm-offset-3 col-sm-9">
        <%= f.submit "Log in", class: 'btn btn-sm btn-primary' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label "Not yet signed up?", class: "control-label col-md-1 col-md-offset-3 col-sm-2 col-sm-offset-1" %>
      <div class="col-md-5 col-sm-9">
        <%= link_to "Sign up", signup_path(), class: 'btn btn-sm btn-default' %><br />
      </div>
    </div>
  <% end %>

</div>
